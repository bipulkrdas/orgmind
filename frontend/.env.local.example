# =============================================================================
# OrgMind Frontend Environment Configuration
# =============================================================================
# This file contains all required environment variables for the OrgMind frontend.
# Copy this file to .env.local and fill in your actual values.
# NEVER commit the .env.local file with real credentials to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
# Required: Yes
# Development: http://localhost:8080
# Production: https://api.orgmind.com
# Note: Do not include trailing slash
# This variable is prefixed with NEXT_PUBLIC_ to make it available in the browser
NEXT_PUBLIC_API_URL=http://localhost:8080

# API request timeout in milliseconds
# Default: 30000 (30 seconds)
# Increase for large file uploads
NEXT_PUBLIC_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# OAuth Configuration
# -----------------------------------------------------------------------------
# OAuth callback redirect URL
# Required: Yes
# Development: http://localhost:3000/auth/callback
# Production: https://orgmind.com/auth/callback
# Note: Must match the redirect URI configured in OAuth provider settings
# This variable is prefixed with NEXT_PUBLIC_ to make it available in the browser
NEXT_PUBLIC_OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application name displayed in the UI
# Default: OrgMind
NEXT_PUBLIC_APP_NAME=OrgMind

# Application environment: development, staging, or production
# Default: development
# Affects error display and debugging features
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode (shows additional logging in browser console)
# Default: false
# Set to true only in development
NEXT_PUBLIC_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable Google OAuth authentication
# Default: true
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true

# Enable Okta OAuth authentication
# Default: true
NEXT_PUBLIC_ENABLE_OKTA_AUTH=true

# Enable Office365 OAuth authentication
# Default: true
NEXT_PUBLIC_ENABLE_OFFICE365_AUTH=true

# Enable file upload feature
# Default: true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# Enable rich text editor
# Default: true
NEXT_PUBLIC_ENABLE_EDITOR=true

# Enable knowledge graph visualization
# Default: true
NEXT_PUBLIC_ENABLE_GRAPH_VISUALIZATION=true

# -----------------------------------------------------------------------------
# Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file upload size in megabytes
# Default: 50
# Note: Must match or be less than backend MAX_UPLOAD_SIZE_MB
NEXT_PUBLIC_MAX_UPLOAD_SIZE_MB=50

# Allowed file types for upload (comma-separated)
# Default: .txt,.pdf,.doc,.docx
# Note: Must match backend ALLOWED_FILE_TYPES
NEXT_PUBLIC_ALLOWED_FILE_EXTENSIONS=.txt,.pdf,.doc,.docx

# -----------------------------------------------------------------------------
# Editor Configuration
# -----------------------------------------------------------------------------
# Enable auto-save in editor (saves to localStorage)
# Default: true
NEXT_PUBLIC_EDITOR_AUTO_SAVE=true

# Auto-save interval in milliseconds
# Default: 5000 (5 seconds)
NEXT_PUBLIC_EDITOR_AUTO_SAVE_INTERVAL=5000

# -----------------------------------------------------------------------------
# Graph Visualization Configuration
# -----------------------------------------------------------------------------
# Default graph layout algorithm
# Options: force-directed, circular, hierarchical
# Default: force-directed
NEXT_PUBLIC_GRAPH_LAYOUT=force-directed

# Enable graph animation
# Default: true
NEXT_PUBLIC_GRAPH_ANIMATION=true

# Graph node size range (min-max)
# Default: 5-20
NEXT_PUBLIC_GRAPH_NODE_SIZE_MIN=5
NEXT_PUBLIC_GRAPH_NODE_SIZE_MAX=20

# -----------------------------------------------------------------------------
# UI Configuration
# -----------------------------------------------------------------------------
# Theme mode: light, dark, or system
# Default: system (follows user's system preference)
NEXT_PUBLIC_THEME_MODE=system

# Enable animations and transitions
# Default: true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Items per page for document lists
# Default: 20
NEXT_PUBLIC_ITEMS_PER_PAGE=20

# -----------------------------------------------------------------------------
# Analytics Configuration (Optional)
# -----------------------------------------------------------------------------
# Google Analytics measurement ID
# Optional: Leave empty to disable analytics
# Example: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Enable error tracking with Sentry
# Optional: Leave empty to disable Sentry
# Example: https://xxxxx@sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Enable React strict mode
# Default: true
# Recommended: Keep enabled to catch potential issues
NEXT_PUBLIC_STRICT_MODE=true

# Show development indicators (e.g., environment badge)
# Default: true in development
NEXT_PUBLIC_SHOW_DEV_INDICATORS=true
